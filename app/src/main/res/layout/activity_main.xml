<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/generic_start_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/main_screen_welcome_text"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/barcode_info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/def_half_half_margin">

        <TextView
            android:id="@+id/product_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="22" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_half_half_margin"
            android:textColor="@color/secondary_dark_color"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Internationaal/Oosters" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_half_half_margin"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:text="ah macaroni vlugkokend" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>